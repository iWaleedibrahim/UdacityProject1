<?xml version="1.0" encoding="utf-8"?>

<!--NOTES: -->
<!--name prop value in vaialbe tag was myName-->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loginFragment"
            type="com.udacity.shoestore.LoginFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/regular_padding"
        android:paddingEnd="@dimen/regular_padding"
        >

        <TextView
            android:id="@+id/login_welcome_text"
            style="@style/big_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:marginTop="200dp"
            android:text="@string/login_welcome_text"
            />



        <TextView
            android:id="@+id/email_label"
            style="@style/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="left"
            android:text="@string/email_label"
            />

        <EditText
            android:id="@+id/email_text"
            android:hint="@string/please_enter_email"
            style="@style/input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="email"
            android:textAlignment="left"
            android:text="@={loginFragment.email}"
            />

        <TextView
            android:id="@+id/password_label"
            style="@style/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="left"
            android:text="@string/password_label"
            />
        <EditText
            android:id="@+id/password_text"
            android:hint="@string/please_enter_password"
            style="@style/input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="password"
            android:textAlignment="left"
            android:text="@={loginFragment.password}"

            />

        <Button
            android:id="@+id/done_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_margin"
            android:fontFamily="@font/roboto"
            android:text="@string/done"
            android:textAlignment="center" />



    </LinearLayout>
</layout>